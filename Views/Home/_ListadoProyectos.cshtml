@model IEnumerable<ProyectoViewModel>

<div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach(ProyectoViewModel proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen proyecto">
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Title</h5>
                            <p class="card-text">@proyecto.Description</p>
                        </div>
                        <div class="card-footer">
                            <a href="@proyecto.Link" class="btn btn-primary" target="_blank" rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>